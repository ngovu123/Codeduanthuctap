<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AssetInRoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/lavender"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/titleToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Danh sách tài sản có trong phòng"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/custom_border_input"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:queryHint="Tìm kiếm theo tên tài sản"
        android:layout_margin="10dp"
        app:iconifiedByDefault="false"/>



    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flb1"
        android:layout_below="@id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch">

        <Button
            android:id="@+id/btnTimKiemTrangThai"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInfoXem"
            android:text="Trạng thái"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:backgroundTint="#737171"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="#FDFDFD"/>

        <Button
            android:id="@+id/btnTimNTS"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInfoXem"
            android:text="Nhóm tài sản"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:backgroundTint="#737171"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="#FDFDFD"/>


    </com.google.android.flexbox.FlexboxLayout>


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch"
        android:layout_below="@id/flb1">

        <TextView
            android:id="@+id/tvInfoXem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sv"
            android:text="Những người đang tra cứu và báo hỏng cùng bạn: "
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textColor="#03A9F4"/>
    </com.google.android.flexbox.FlexboxLayout>







    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/flb2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

        </androidx.recyclerview.widget.RecyclerView>


    </ScrollView>

</RelativeLayout>