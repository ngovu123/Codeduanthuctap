<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgHome_BaoHong"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_admin_panel_settings_24">

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/tvTen"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/imgHome_BaoHong"
                android:ems="5"
                android:gravity="left|center"
                android:text="Trần Văn Lê Đức"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChucDanh"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTen"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imgHome_BaoHong"
                android:gravity="left|center"
                android:text="Admin"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:textStyle="bold|italic">

            </TextView>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/tvTen"
                android:backgroundTint="#FF0000"
                android:text="2024802010403@student.tdmu.edu.vn"
                android:textAlignment="center"
                android:textColor="#009688"
                android:textSize="13sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvSDT"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEmail"
                android:layout_toRightOf="@id/tvChucDanh"
                android:backgroundTint="#FF0000"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Số điện thoại: 0326393540"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="italic" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>